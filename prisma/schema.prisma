datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
  default  = true
}

generator photon {
  provider = "photonjs"
}

model Form {
  id        Int     @id @unique
  uid       String  @unique
  name      String
  tag       String
  questions Question[]
}

model Question {
  id        Int      @id @unique
  uid       String   @unique
  type      String
  text      String
  form      Form?
  answers   Answer[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Answer {
  id        Int      @id @unique
  uid       String   @unique
  type      String
  text      String
  question  Question?
  response  Response?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Response {
  id        Int      @id @unique
  uid       String   @unique
  user      User?
  answers   Answer[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        Int      @id @unique
  email     String   @unique
  responses Response[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
